выполнить:
	@if [ -z "$(файл)" ]; then echo "пожалуйста передайте имя файла"; exit 1; fi
	@cargo run --quiet -- "$(файл)"
	@rustc "$(файл:.абв=.rs)" -o "$(файл:.абв=)"
	@rm -f "$(файл:.абв=.rs)"  # удаляем .rs файл сразу
	@echo "файл скомпилирован! запуск! (в дальнейшем ./$(файл:.абв=))"
	@./"$(файл:.абв=)"

нейро: 
	@echo "запускается сборка нейро ассистента"
	@python3 main.py 
